<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="470.0" prefWidth="675.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eltemps.InicialController">
   <center>
      <VBox prefHeight="441.0" prefWidth="496.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="previsio" mnemonicParsing="false" onAction="#previsioWindow" prefHeight="25.0" prefWidth="94.0" text="Previsió">
               <VBox.margin>
                  <Insets left="400.0" right="1.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Label text="Info Meteorològica" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <ImageView fx:id="iv_icon" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets left="70.0" right="25.0" />
               </VBox.margin>
            </ImageView>

            <Label fx:id="lbInfo" prefHeight="162.0" prefWidth="322.0" text="Seleccioni una ciutat per carregar la informació...">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="70.0" />
               </VBox.margin></Label>
         </children>
      </VBox>
   </center>
   <left>
      <VBox BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets left="5.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Ciutats">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <ListView fx:id="lvCiutats" prefHeight="403.0" prefWidth="200.0" />
         </children>
      </VBox>
   </left>
</BorderPane>
